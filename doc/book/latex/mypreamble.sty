% Define nJexl syntax 
% Define Language
\lstdefinelanguage{jxl}
{
  % list of keywords
  morekeywords={
    import, if, else, while, for, as, until , return , continue, break, new , \#atomic, def , \#def, size , empty, 
    read, write, send, random, select , where , join, list, set, mset, dict, array, sub,
    lfold, rfold, index, rindex , hash , true, false , null , matrix , json, xml ,
    lt,gt,le,ge,ne,eq , mod, enum , lines , 
    and, or, xor, not, isa , type , bye, test , thread, system , minmax, sqlmath , load , clock, 
    int, short, char, long, bool, INT, float, double, DEC, date, time , instant, str ,
    \$, @ , \_, \_\_args\_\_ , \_\_me\_\_ , \#@ , \$\$ , \_\$\_     
  },
  sensitive=true, % keywords are not case-sensitive
  morecomment=[l]{//}, % l is for line comment
  morecomment=[l]{\#\#}, % l is for line comment
  morecomment=[s]{/*}{*/}, % s is for start and end delimiter
  morestring=[b]", % defines that strings are enclosed in double quotes
  morestring=[b]', % defines that strings are enclosed in single quotes
  morestring=[b]`, % defines that strings are enclosed in back quotes
}

\lstdefinelanguage{XML}
{
  morestring=[s]{"}{"},
  morecomment=[s]{?}{?},
  morecomment=[s]{!--}{--},
  commentstyle=\color{darkgray},
  moredelim=[s][\color{black}]{>}{<},
  moredelim=[s][\color{red}]{\ }{=},
  stringstyle=\color{darkgreen},
  identifierstyle=\color{darkred}
}
